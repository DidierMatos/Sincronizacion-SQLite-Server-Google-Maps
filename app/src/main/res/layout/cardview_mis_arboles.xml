<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:background="@color/colorBlanco"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:id="@+id/linear_head"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtviewTituloCVarbol"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Arbol con folio: "
                    android:layout_weight="1"
                    android:textColor="@color/colorNegro"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtviewFolioCVarbol"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:layout_weight="1"
                    android:textColor="@color/colorNegro"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/btnVistasCVarbol"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorBotonVerde" />

                <ImageButton
                    android:id="@+id/btnEditarCVarbol"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorBotonRojo"/>
                <ImageButton
                    android:id="@+id/btnEliminarCVarbol"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorBotonVerde"/>
            </LinearLayout>

