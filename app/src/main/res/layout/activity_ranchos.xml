<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RanchosActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarRanchos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorBlanco"
        android:elevation="5dp">

        <ImageButton
            android:id="@+id/imgbtnBackRanchos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_action_arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arboles"
            android:textColor="@color/colorNegro"
            android:layout_marginStart="30dp"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvRanchos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRanchos"
        android:layout_marginTop="10dp"/>

</RelativeLayout>