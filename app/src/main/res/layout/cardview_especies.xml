<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/rl_lonuevo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="2dp"
        cardview:cardCornerRadius="7dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNombreEspecie"
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caoba"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"/>

            <ImageButton
                android:id="@+id/imgbtnVerArboles"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_arboles_ranchos"/>
            <ImageButton
                android:id="@+id/imgbtnEditarArboles"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_update"/>
            <ImageButton
                android:id="@+id/imgbtnEliminarArboles"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_delete"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>